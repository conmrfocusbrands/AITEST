pipeline {
    agent any
    tools {
        maven 'Maven 3.6.3' // Adjust to your Maven version
    }
    stages {
        stage('Build') {
            steps {
                git 'https://your-repo-url.git'
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
